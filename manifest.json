{
  "manifest_version": 3,
  "name": "Cisco Spaces OS Ready Report",
  "version": "1.0",
  "description": "Generate OS Ready reports for Cisco Spaces",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://*.dnaspaces.io/*",
    "https://*.dnaspaces.eu/*",
    "https://*.dnaspaces.sg/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.dnaspaces.io/*",
        "https://*.dnaspaces.eu/*",
        "https://*.dnaspaces.sg/*"
      ],
      "js": [
        "constants.js",
        "utils.js",
        "progress.js",
        "navigation.js",
        "checks/config.js",
        "checks/account.js",
        "checks/location.js",
        "checks/wireless.js",
        "checks/connectors.js",
        "checks/integrations.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cisco Spaces OS Ready Report",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon32.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon32.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/html2canvas.min.js",
        "libs/jspdf.umd.min.js"
      ],
      "matches": [
        "https://*.dnaspaces.io/*",
        "https://*.dnaspaces.eu/*",
        "https://*.dnaspaces.sg/*"
      ]
    }
  ]
}
